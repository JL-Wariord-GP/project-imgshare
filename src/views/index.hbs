<div class="card">

    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i>
            Upload and image
        </h3>
    </div>

    <div class="card-body p-4">
        <form action="/images" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
                <input type="file" name="image" class="form-control text-dark border-success" required />
            </div>

            <div class="mb-3">
                <input type="text" name="title" class="form-control border border-success"
                    placeholder="Title for the Image" required />
            </div>

            <div class="mb-3">
                <textarea name="description" rows="2" class="form-control border border-success"
                    placeholder="Deescription for the Image" required></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i>
                    Upload Image
                </button>
            </div>

        </form>
    </div>
</div>

</div>

<div class="card mt-2 bg-dark text-white">
    <div class="card-header d-flex align-items-center">
        <span class="material-icons me-2">
            cloud
        </span>
        Recent Uploads
    </div>
    <div class="card-body p-5">
        <div class="row">
            {{#each images}}
            <div class="col-md-4 text-center">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" alt="{{title}}" class="w-100 h-100" style="object-fit: cover;" />
                </a>
            </div>
            {{else}}
            <div class="text-light text-center p-5">
                <h1 class="text-light">There are no Images <strong>yet</strong></h1>
                <p>Upload your first image</p>
                <span class="material-icons" style="font-size: 7rem;">
                    add_a_photo
                </span>
            </div>
            {{/each}}
        </div>
    </div>
</div>