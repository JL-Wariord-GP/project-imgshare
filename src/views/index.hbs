<div class="card">

    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i>
            Upload and image
        </h3>
    </div>

    <div class="card-body p-4">
        <form action="/images" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
                <input type="file" name="image" class="form-control text-dark border-success" required />
            </div>

            <div class="mb-3">
                <input type="text" name="title" class="form-control border border-success"
                    placeholder="Title for the Image" required />
            </div>

            <div class="mb-3">
                <textarea name="description" rows="2" class="form-control border border-success"
                    placeholder="Deescription for the Image" required></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i>
                    Upload Image
                </button>
            </div>

        </form>
    </div>
</div>

</div>